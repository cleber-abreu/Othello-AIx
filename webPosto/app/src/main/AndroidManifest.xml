<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualityautomacao.webposto" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.FilialActivity"
            android:label="@string/title_activity_filial"
            android:parentActivityName=".view.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.LoginActivity" />
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".view.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.LoginActivity" />
        </activity>
        <activity
            android:name=".view.ContasPagarActivity"
            android:label="@string/title_activity_contas_pagar"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.ContasReceberActivity"
            android:label="@string/title_activity_contas_receber"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.VendasActivity"
            android:label="@string/title_activity_vendas"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.TanquesActivity"
            android:label="@string/title_activity_tanques"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.TrocaPrecoActivity"
            android:label="@string/title_activity_troca_preco"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.ProjecaoAbastecimentoActivity"
            android:label="@string/title_activity_projecao_abastecimento"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.NotificacoesActivity"
            android:label="@string/title_activity_notificacoes"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.TrocaPrecoEnviarActivity"
            android:label="@string/title_activity_troca_preco_enviar"
            android:parentActivityName=".view.TrocaPrecoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.TrocaPrecoActivity" />
        </activity>
    </application>

</manifest>
