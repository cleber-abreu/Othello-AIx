<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualityautomacao.webposto">

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.FilialActivity"
            android:label="@string/title_activity_filial"
            android:parentActivityName=".view.LoginActivity">
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".view.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.LoginActivity" />
        </activity>
        <activity
            android:name=".view.ContasPagarActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ContasReceberActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.VendasActivity"
            android:label="@string/title_activity_vendas"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.TanquesActivity"
            android:label="@string/title_activity_tanques"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.TrocaPrecoActivity"
            android:label="@string/title_activity_troca_preco"
            android:parentActivityName=".view.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.ProjecaoAbastecimentoActivity"
            android:label="@string/title_activity_projecao_abastecimento"
            android:parentActivityName=".view.MainActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.NotificacoesActivity"
            android:label="@string/title_activity_notificacoes"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.TrocaPrecoEnviarActivity"
            android:label="@string/title_activity_troca_preco_enviar"
            android:parentActivityName=".view.TrocaPrecoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualityautomacao.webposto.view.TrocaPrecoActivity" />
        </activity>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="gcm.play.android.samples.com.gcmquickstart" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->


        <!-- [START gcm_listener] -->
        <service
            android:name=".notificacao.ListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->
        <!-- [START instanceId_listener] -->
        <service
            android:name=".notificacao.IDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name=".notificacao.RegistrationIntentService"
            android:exported="false" />

        <activity
            android:name=".view.FiltroActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.PagarTituloActivity"
            android:label="@string/title_pagar_titulo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.PagarChequeActivity"
            android:label="@string/title_pagar_cheques"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ReceberTituloActivity"
            android:label="@string/title_receber_titulo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ReceberChequeActivity"
            android:label="@string/title_receber_cheques"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ReceberCartaFreteActivity"
            android:label="@string/title_receber_carta_frete"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ReceberCartaoActivity"
            android:label="@string/title_receber_cartao"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.ListaClienteActivity"
            android:label="@string/title_lista_cliente"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>