<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WebPosto.Row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rtdv_txt_titulo"
        style="@style/WebPosto.RowChaveChaveGrandeValorPequeno"
        tools:text="Cliente"/>

    <TextView
        android:id="@+id/rtdv_txt_valor_principal"
        style="@style/WebPosto.RowValorChaveGrandeValorPequeno"
        android:layout_marginTop="@dimen/espacamento_micro"
        android:layout_below="@id/rtdv_txt_titulo"
        tools:text="R$ 2.143,55"/>

    <TextView
        android:id="@+id/rtdv_txt_valor_segundario"
        style="@style/WebPosto.RowValorChaveGrandeValorPequeno"
        android:layout_marginTop="@dimen/espacamento_micro"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rtdv_txt_titulo"
        tools:text="17/01/2017"/>

</RelativeLayout>
