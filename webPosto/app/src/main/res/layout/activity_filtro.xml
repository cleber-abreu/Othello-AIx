<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_filtro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark"
    tools:context="com.qualityautomacao.webposto.view.FiltroActivity">

    <View style="@style/WebPosto.EspacoTopo"/>

    <!-- FILTRO DE DATA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/WebPosto.BlocoMenuChaveValor">
            <TextView
                style="@style/WebPosto.ChaveMenuChaveValor"
                android:text="Data Inicio"/>
            <TextView
                style="@style/WebPosto.ValorMenuChaveValor"
                android:text="04/01/2017"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/WebPosto.BlocoMenuChaveValor">
            <TextView
                style="@style/WebPosto.ChaveMenuChaveValor"
                android:text="Data Fim"/>
            <TextView
                style="@style/WebPosto.ValorMenuChaveValor"
                android:text="04/02/2017"/>
        </RelativeLayout>

        <View style="@style/WebPosto.EspacoEntreComponentes"/>

    </LinearLayout>

    <Button style="@style/WebPosto.ItemMenuPrincipal"
        android:text="Consultar"/>

</LinearLayout>
