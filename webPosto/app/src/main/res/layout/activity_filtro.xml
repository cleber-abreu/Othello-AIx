<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_filtro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark"
    tools:context="com.qualityautomacao.webposto.view.FiltroActivity">

    <View style="@style/WebPosto.EspacoTopo"/>

    <!-- FILTRO DE DATA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/espacamento_normal"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/WebPosto.BlocoMenuChaveValor">
            <TextView
                style="@style/WebPosto.ChaveMenuChaveValor"
                android:text="Data Inicio"/>
            <TextView
                style="@style/WebPosto.ValorMenuChaveValor"
                android:text="04/01/2017"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/WebPosto.BlocoMenuChaveValor">
            <TextView
                style="@style/WebPosto.ChaveMenuChaveValor"
                android:text="Data Fim"/>
            <TextView
                style="@style/WebPosto.ValorMenuChaveValor"
                android:text="04/02/2017"/>
        </RelativeLayout>

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/espacamento_normal"
        android:paddingRight="@dimen/espacamento_normal"
        android:layout_marginBottom="@dimen/espacamento_normal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/fil_tbt_aberto"
            style="@style/WebPosto.Segmento.Esquerda"
            android:checked="true"
            android:text="Aberto" />

        <RadioButton
            android:id="@+id/fil_tbt_parcial"
            style="@style/WebPosto.Segmento.Centro"
            android:text="Parcial" />

        <RadioButton
            android:id="@+id/fil_tbt_pago"
            style="@style/WebPosto.Segmento.Direita"
            android:text="Pago"/>

    </RadioGroup>

    <Button style="@style/WebPosto.ItemMenuPrincipal"
        android:text="Consultar"/>

</LinearLayout>
