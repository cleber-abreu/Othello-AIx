<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WebPosto.Row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rven_txt_produto"
        style="@style/WebPosto.TextoChave.ChaveGrandeValorPequeno"
        tools:text="Produto"/>

    <TextView
        android:id="@+id/rven_txt_quantidade"
        style="@style/WebPosto.TextoValor.ChaveGrandeValorPequeno"
        android:layout_marginTop="@dimen/espacamento_micro"
        android:layout_alignParentRight="false"
        android:layout_toRightOf="@+id/rven_lbl_unidade"
        android:layout_below="@+id/rven_txt_produto"
        tools:text="Quantidade"/>

    <TextView
        android:id="@+id/rven_txt_valor"
        style="@style/WebPosto.TextoValor.ChaveGrandeValorPequeno"
        android:layout_marginTop="@dimen/espacamento_micro"
        android:layout_below="@+id/rven_txt_produto"
        tools:text="Valor"/>

    <TextView
        android:id="@+id/rven_lbl_unidade"
        style="@style/WebPosto.TextoValor.ChaveGrandeValorPequeno"
        android:layout_marginRight="@dimen/espacamento_micro"
        android:layout_alignParentRight="false"
        android:layout_alignBaseline="@id/rven_txt_quantidade"
        android:text="Qt:"/>

</RelativeLayout>
