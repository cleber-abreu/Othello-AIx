<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WebPosto.Row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/WebPosto.TextoChave.ChaveGrandeValorPequeno"
        android:layout_marginBottom="@dimen/espacamento_micro"
        android:id="@+id/rtit_txt_fornecedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Joao Jose"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo: "/>

        <TextView
            android:id="@+id/rtit_txt_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123 321"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vencimento: "/>

        <TextView
            android:id="@+id/rtit_txt_vencimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="01/03/2017"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor: "/>

        <TextView
            android:id="@+id/rtit_txt_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="R$ 12,21"/>
    </LinearLayout>
</LinearLayout>