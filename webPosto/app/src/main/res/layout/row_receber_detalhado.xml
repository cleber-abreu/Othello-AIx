<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WebPosto.Bloco"
    android:gravity="top"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rdtr_txt_cliente"
        style="@style/WebPosto.TextoChave.ChaveGrandeValorPequeno"
        tools:text="Cliente"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/espacamento_mini">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fonte_micro"
                android:text="Valor total"/>

            <TextView
                android:id="@+id/rdtr_txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="R$: 428,88"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fonte_micro"
                android:text="Valor pago"/>

            <TextView
                android:id="@+id/rdtr_txt_pago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$: 428,88"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fonte_micro"
                android:text="Valor a receber"/>

            <TextView
                android:id="@+id/rdtr_txt_a_receber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$: 0,00"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>