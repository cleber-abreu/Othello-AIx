<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="qualityButton">@android:color/white</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/qualityCor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/qualityCor</item>
    </style>

    <style name="AppTheme.Evidente" parent="AppTheme.NoActionBar">
        <item name="colorControlActivated">@color/acentuada</item>
    </style>

    <style name="WebPosto"/>

    <style name="WebPosto.Bloco">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:paddingTop">@dimen/espacamento_normal</item>
        <item name="android:paddingRight">@dimen/espacamento_normal</item>
        <item name="android:paddingBottom">@dimen/espacamento_normal</item>
        <item name="android:paddingLeft">@dimen/espacamento_normal</item>
        <item name="android:background">@color/bg_light</item>
    </style>

    <style name="WebPosto.TextoChave"/>
    <style name="WebPosto.TextoValor"/>

    <style name="WebPosto.TituloMenuPrincipal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginTop">@dimen/espacamento_grande</item>
        <item name="android:layout_marginLeft">@dimen/espacamento_grande</item>
        <item name="android:layout_marginBottom">@dimen/espacamento_mini</item>
    </style>

    <style name="WebPosto.ItemMenuPrincipal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_item_menu</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:drawableEnd">@drawable/seta_direita</item>
    </style>

    <style name="WebPosto.BlocoInformacao" parent="WebPosto.Bloco">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WebPosto.TextoBlocoInformacao">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bg_light</item>
        <item name="android:textColor">@color/fontColor_item_menu</item>
        <item name="android:textSize">@dimen/fontSize_item_menu</item>
    </style>

    <style name="WebPosto.BlocoMenuChaveValor" parent="WebPosto.Bloco">
        <item name="android:paddingTop">@dimen/espacamento_pequeno</item>
        <item name="android:paddingBottom">@dimen/espacamento_pequeno</item>
    </style>

    <style name="WebPosto.TextoMenuChaveValor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontSize_item_menu</item>
        <item name="android:textColor">@color/fontColor_item_menu</item>
    </style>

    <style name="WebPosto.TextoChave.MenuChaveValor" parent="WebPosto.TextoMenuChaveValor">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="WebPosto.TextoValor.MenuChaveValor" parent="WebPosto.TextoMenuChaveValor">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="WebPosto.TextoChave.ChaveGrandeValorPequeno">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fonte_normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WebPosto.TextoValor.ChavePequenaValorGrande">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fonte_normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WebPosto.TextoChave.ChavePequenaValorGrande">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fonte_mini</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WebPosto.TextoValor.ChaveGrandeValorPequeno">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fonte_mini</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="WebPosto.TextoValor.RowTitulo" parent="WebPosto.TextoChave.ChaveGrandeValorPequeno">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_evidencia</item>
    </style>

    <style name="WebPosto.TextoValor.RowValor" parent="WebPosto.TextoValor.ChaveGrandeValorPequeno">
        <item name="android:textColor">@color/text_color_evidencia</item>
    </style>

    <style name="WebPosto.Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/espacamento_mini</item>
        <item name="android:paddingBottom">@dimen/espacamento_mini</item>
        <item name="android:paddingLeft">@dimen/espacamento_normal</item>
        <item name="android:paddingRight">@dimen/espacamento_normal</item>
    </style>

    <style name="WebPosto.EspacoTopo">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">@dimen/espacamento_gigante</item>
    </style>

    <style name="WebPosto.EspacoEntreComponentes">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">@dimen/espacamento_normal</item>
    </style>

    <style name="WebPosto.SegmentoGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/espacamento_normal</item>
        <item name="android:paddingLeft">@dimen/espacamento_normal</item>
        <item name="android:paddingRight">@dimen/espacamento_normal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WebPosto.Segmento">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/txt_segmento</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textAppearance">@style/Widget.AppCompat.Button</item>
        <item name="android:textSize">@dimen/fontSize_componente</item>
    </style>

    <style name="WebPosto.Segmento.Esquerda" parent="WebPosto.Segmento">
        <item name="android:background">@drawable/bg_segmento_esquerda</item>

    </style>

    <style name="WebPosto.Segmento.Centro" parent="WebPosto.Segmento">
        <item name="android:background">@drawable/bg_segmento_centro</item>
    </style>

    <style name="WebPosto.Segmento.Direita" parent="WebPosto.Segmento">
        <item name="android:background">@drawable/bg_segmento_direita</item>
    </style>

    <style name="WebPosto.Segmento.Reto" parent="WebPosto.Segmento">
        <item name="android:background">@drawable/bg_segmento_reto</item>
    </style>

</resources>